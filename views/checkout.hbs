<!--================Checkout Area =================-->
<section class="checkout_area section_gap">
	<div class="container">

		<div class="billing_details">
			<div class="row">
				<div class="col-lg-7">
					<h3>Thông tin giao hàng và thanh toán</h3>
					<form class="row contact_form" action="/checkout/create-order" method="post" novalidate="novalidate" id="detail_delivery">
						<div class="col-md-12 form-group">
							<input placeholder= "Họ tên*" type="text" class="form-control" id="name" name="name" required = "true">
						</div>

						<div class="col-md-6 form-group">
							<input placeholder = "Số điện thoại*" type="text" class="form-control" id="telephone" name="telephone">
						</div>
						<div class="col-md-6 form-group">
							<input placeholder="Địa chỉ email*" type="text" class="form-control" id="email" name="email">						
						</div>
						<div class="col-md-12 form-group">
							<input type="text" placeholder="Địa chỉ*" class="form-control" id="address" name="address">
						</div>
						<div class="col-md-12 form-group">
							<input placeholder="Quận/Huyện*" type="text" class="form-control" id="province" name="province">
						</div>
						<div class="col-md-12 form-group p_star">
							<select name = "district" class="country_select" form="detail_delivery">
