							</select>
						</div>

						<div class="col-md-12 form-group">
							<div class="creat_account">
								<h3>Chi tiết vận chuyển</h3>
							</div>
							<textarea class="form-control" name="message" id="message" rows="1"
								placeholder="Ghi chú thêm"></textarea>
						</div>
					</form>
				</div>
				<div class="col-lg-5">
					<div class="order_box">
						<h2>Đơn hàng của bạn</h2>
						<ul class="list">
							<li>
								<div class="row">
								<p class="col-sm-7">Sản phẩm</p>
								<p class="col-sm-3">Số lượng</p>
								<p class="col-sm-2">Tổng</p>
								</div>
							</li>
							{{#each products }}
							<li>
								<div class="row">
								<a class="col-sm-7" href="#">{{this.item.title}}</a>
								<a class="col-sm-2">x {{this.quantity}}</a>
								<a class="col-sm-3">{{this.price}} VND</a>
								</div>
							</li>
							{{/each}}
							
						</ul>
						<ul class="list list_2">
							
							<li>
								<a href="#">Tổng đơn hàng
									<span>${{totalPrice}} VND</span>
								</a>
							</li>
						</ul>
						
						<button type="submit" class="main_btn" form="detail_delivery">Tiến hành thanh toán</button>
						{{#if hasErrors}}
            				<div class="alert alert-danger login_form">
                				{{#each messages }}
                    				<p>{{this.msg}}</p>
               					{{/each}}
            				</div>
       					{{/if}}

					</div>
				</div>
			</div>
		</div>
	</div>
